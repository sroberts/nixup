# Ghostty Configuration
# https://ghostty.org/docs/config

# Font
font-family = "JetBrainsMono Nerd Font"
font-size = 12
font-thicken = true

# Window
window-padding-x = 10
window-padding-y = 10
window-decoration = false
gtk-titlebar = false

# Cursor
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing = true

# Scrollback
scrollback-limit = 50000

# Bell
audible-bell = false
visual-bell = false

# Copy/Paste
copy-on-select = true
clipboard-paste-protection = true

# URL handling
link-url = true

# Tokyo Night color scheme
background = #1a1b26
foreground = #c0caf5
selection-background = #33467c
selection-foreground = #c0caf5
cursor-color = #c0caf5

# Normal colors
palette = 0=#15161e
